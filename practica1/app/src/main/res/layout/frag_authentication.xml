<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/activity_vertical_margin"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <TableRow>

            <TextView
                android:id="@+id/autenticacion_user_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:text="@string/autenticacion_user"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/autenticacion_user_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="12"
                android:inputType="textPersonName"
                tools:hint="@string/autenticacion_user_hint" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/autenticacion_pass_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:text="@string/autenticacion_pass"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/autenticacion_pass_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="12"
                android:inputType="textPassword"
                tools:hint="@string/autenticacion_pass_hint" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/autenticacion_ip_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:text="@string/autenticacion_ip"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/autenticacion_ip_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="12"
                android:inputType="text"
                tools:hint="@string/autenticacion_ip_hint" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/autenticacion_port_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="5"
                android:text="@string/autenticacion_port"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/autenticacion_port_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:inputType="number"
                tools:hint="@string/autenticacion_port_hint" />

        </TableRow>

    </TableLayout>

</RelativeLayout>